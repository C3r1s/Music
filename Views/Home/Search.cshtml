@model SearchViewModel

<div class="container py-5">
    <h2 class="mb-4">Результаты поиска по запросу: "@Model.Query"</h2>

    <!-- Артисты -->
    @if (Model.Artists.Any())
    {
        <h4>Артисты</h4>
        <div class="row mb-4">
            @foreach (var artist in Model.Artists)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="card album-card">
                        <img src="@artist.UrlImg" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@artist.Name</h5>
                            <a asp-controller="Artist" asp-action="Details" asp-route-id="@artist.Id" class="btn btn-primary">Подробнее</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- Альбомы -->
    @if (Model.Albums.Any())
    {
        <h4>Альбомы</h4>
        <div class="row mb-4">
            @foreach (var album in Model.Albums)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="card album-card">
                        <img src="@album.UrlImg" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@album.Name</h5>
                            <a asp-controller="Album" asp-action="Details" asp-route-id="@album.Id" class="btn btn-primary">Подробнее</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- Песни -->
    @if (Model.Songs.Any())
    {
        <h4>Песни</h4>
        <ul class="list-group mb-4">
            @foreach (var song in Model.Songs)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @song.Name
                    <a asp-controller="Song" asp-action="Index" asp-route-albumId="@song.Albums.FirstOrDefault()?.Id" class="btn btn-sm btn-outline-primary">Слушать</a>
                </li>
            }
        </ul>
    }

    @if (!Model.Artists.Any() && !Model.Albums.Any() && !Model.Songs.Any())
    {
        <p>Ничего не найдено.</p>
    }
</div>
