@model Artist

<div class="container py-4">
    <div class="card mb-4">
        <div class="row g-0">
            <div class="col-md-4 text-center">
                <img src="@Model.UrlImg" class="img-fluid rounded-start p-3" alt="Изображение артиста" style="max-height: 300px;">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title">@Model.Name</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Случайные песни -->
    @if (ViewBag.RandomSongs != null && ((List<Song>)ViewBag.RandomSongs).Any())
    {
        <h4>Случайные песни</h4>
        <div class="row mb-4">
            @foreach (var song in ViewBag.RandomSongs as List<Song>)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">@song.Name</h5>
                            <audio controls class="w-100">
                                <source src="@song.UrlSong" type="audio/mpeg">
                                Ваш браузер не поддерживает аудио элемент.
                            </audio>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- Альбомы -->
    @if (Model.Albums.Any())
    {
        <h4>Альбомы</h4>
        <div class="row">
            @foreach (var album in Model.Albums)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="card album-card">
                        <img src="@album.UrlImg" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@album.Name</h5>
                            <a asp-controller="Album" asp-action="Details" asp-route-id="@album.Id" class="btn btn-primary">Подробнее</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>У этого артиста пока нет альбомов.</p>
    }

    <a asp-action="Index" class="btn btn-secondary mt-4">Назад к списку</a>
</div>
