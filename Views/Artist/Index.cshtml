@model List<Artist>

<div class="container py-5">
    <h1 class="text-center mb-5">Популярные Артисты</h1>

    <div class="row">
        @foreach (var artist in Model)
        {
            <div class="col-md-4 col-lg-3">
                <div class="card album-card">
                    <img src="@artist.UrlImg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@artist.Name</h5>
                        <a asp-action="Edit" asp-route-id="@artist.Id" class="btn btn-warning">Редактировать</a>
                        <a asp-action="Delete" asp-route-id="@artist.Id" class="btn btn-danger">Удалить</a>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (ViewBag.Pagination.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= ViewBag.Pagination.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.Pagination.PageNumber ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }

    <a asp-action="Create" class="btn btn-primary mt-4">Добавить нового артиста</a>
</div>
